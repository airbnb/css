		/*Set the fluid property since it expands and contracts*/
		#contentwrapper {
			float: left;
			width: 100%;
		}
		
		/*left and right column is fixed*/
		#contentcolumn {
			margin: 0 230px 0 230px;
		}
		
		
		#leftcolumn {
			float: left;
			width: 230px;
			margin-left: -100%; 			/*to stay in the left position regardless of the screen size.*/
			background: #24C8FF;
		}
		
		#rightcolumn {
			float: left;
			width: 230px;
			margin-left: -230px;			/*to stay in the right position regardless of the screen size.*/
			background: #FFFB00;
		}
		
		.innertext {						/*It is applied to any div containing text content.*/
			margin: 20px;
			font-family: Arial; 
			color: #5E5E5E;					/*Light Grey color*/
		}
		
		#footer {
			clear: left; /* Cannot float on Left. So that it can be at boottom of content wrapper. */
			width: 100%;
			background: black;
			color: #FFF;
			font-family: Arial;
			text-align: center;
